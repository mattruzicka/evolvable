#!/usr/bin/env ruby

require 'bundler/setup'
require 'evolvable'

# Require "The Evolvable String Tutorial" example code
require './bin/evolvable_string/char_gene'
require './bin/evolvable_string/evolvable_string'

puts "To get started, try this:\n\n" \
     " population = EvolvableString.new_population\n" \
     " population.mutation.probability = 0.8\n" \
     " population.evolve(goal_value: EvolvableString::TARGET_STRING.length)\n\n"

require 'irb'
IRB.start(__FILE__)
